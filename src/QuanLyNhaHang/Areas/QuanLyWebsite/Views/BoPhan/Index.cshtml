@model IEnumerable<QuanLyNhaHang.Models.BOPHAN>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaBP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaTruongBP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenBP)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaBP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaTruongBP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenBP)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
