@model QuanLyNhaHang.Models.HOADONNHAPHANG

@{
    Layout = "~/Areas/Quan-ly/Views/Shared/_LayoutContent.cshtml";
    ViewData["Title"] = "Cập nhật thông tin hóa đơn";
    ViewData["areas"] = "Quản lý";
    ViewData["controller"] = "Hóa đơn nhập hàng";
    ViewData["action"] = "Cập nhật";
    ViewData["h2"] = "Cập nhật thông tin hóa đơn";
}

<form asp-action="Edit" id="demo-form2" data-parsley-validate="" class="" novalidate="">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="MaHD" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input asp-for="MaHD" class="form-control" />
                <span asp-validation-for="MaHD" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="MaYeuCau" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <select asp-for="MaYeuCau" class="select2_group form-control" asp-items="ViewBag.MaYeuCau"></select>
                <span asp-validation-for="MaYeuCau" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MaNV" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <select asp-for="MaNV" class="select2_group form-control" asp-items="ViewBag.MaNV"></select>
                <span asp-validation-for="MaNV" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ThanhTien" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input asp-for="ThanhTien" class="form-control" />
                <span asp-validation-for="ThanhTien" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ThoiGianNhap" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="input-group date datetimepicker1">
                    <input asp-for="ThoiGianNhap" type="date" id="date" class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
            <span asp-validation-for="ThoiGianNhap" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="GhiChu" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <textarea asp-for="GhiChu" class="form-control" data-parsley-trigger="keyup" data-parsley-minlength="20" data-parsley-maxlength="100" data-parsley-minlength-message="Come on! You need to enter at least a 20 caracters long comment.." data-parsley-validation-threshold="10"></textarea>
                <span asp-validation-for="GhiChu" class="text-danger" />
            </div>
        </div>
        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                <a asp-action="search" asp-controller="hoadonnhaphang" class="btn btn-success pull-left">Quay lại</a>
                <input type="submit" value="Lưu" class="btn btn-warning pull-left" />
            </div>
        </div>

    </div>
</form>
