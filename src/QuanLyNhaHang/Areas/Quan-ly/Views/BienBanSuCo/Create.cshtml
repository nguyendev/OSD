@model QuanLyNhaHang.Models.BIENBANSUCO

@{
    ViewData["Title"] = "Create";
}
<div class="clearfix"></div>
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Tạo báo cáo sự cố</small></h2>
            <ul class="nav navbar-right panel_toolbox">

                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="visibility:hidden;" role="button" aria-expanded="false">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#">Settings 1</a></li>
                        <li><a href="#">Settings 2</a></li>
                    </ul>
                </li>
                <li><a class="close-link" style="visibility:hidden"><i class="fa fa-close"></i></a></li>
                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <br>
            <form asp-action="Create" id="demo-form2" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-horizontal">
                    <div class="form-group">
                        <label asp-for="GhiChu" class="control-label col-md-3 col-sm-3 col-xs-12">
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <textarea asp-for="GhiChu" required="required" class="form-control" name="message" data-parsley-trigger="keyup" data-parsley-minlength="20" data-parsley-maxlength="100" data-parsley-minlength-message="Come on! You need to enter at least a 20 caracters long comment.." data-parsley-validation-threshold="10"></textarea>
                            <span asp-validation-for="GhiChu" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="HuongGiaiQuyet" class="control-label col-md-3 col-sm-3 col-xs-12"><span class="required">*</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <textarea asp-for="HuongGiaiQuyet" required="required" class="form-control" name="message" data-parsley-trigger="keyup" data-parsley-minlength="20" data-parsley-maxlength="100" data-parsley-minlength-message="Come on! You need to enter at least a 20 caracters long comment.." data-parsley-validation-threshold="10"></textarea>
                            <span asp-validation-for="HuongGiaiQuyet" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaNV" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <select asp-for="MaNV" class="select2_group form-control" asp-items="ViewBag.MaNV"></select>
                            <span asp-validation-for="MaNV" class="text-danger" />
                        </div>
                    </div>


                    <div class="form-group">
                        <label asp-for="NgayTao" class="control-label col-md-3 col-sm-3 col-xs-12">
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input id="ngaytao" asp-for="NgayTao" class="date-picker form-control col-md-7 col-xs-12 parsley-success" required="required" type="text" data-parsley-id="16">
                            <span asp-validation-for="NgayTao" class="text-danger" />
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <a asp-action="index" asp-controller="bienbansuco" class="btn btn-primary pull-left">Quay la?</a>
                            <input type="submit" value="G?i" class="btn btn-success pull-right" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section css{
    <link href="~/gentelella/vendors/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet" />
}
@section Scripts {
    <!-- bootstrap-daterangepicker -->
    <script src="~/gentelella/vendors/moment/moment.js"></script>
    <script src="~/gentelella/vendors/bootstrap-daterangepicker/daterangepicker.js"></script>
    <script>
      $(document).ready(function() {
        $('#ngaytao').daterangepicker({
          singleDatePicker: true,
          calender_style: "picker_4"
        }, function(start, end, label) {
          console.log(start.toISOString(), end.toISOString(), label);
        });
      });
    </script>
    <!-- js default -->
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
