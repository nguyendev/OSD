@model QuanLyNhaHang.Models.BIENBANSUCO
@{
    Layout = "~/Areas/Quan-ly/Views/Shared/_LayoutContent.cshtml";
    ViewData["Title"] = "Tạo báo cáo sự cố mới | Quản lý";
    ViewData["areas"] = "Quản lý";
    ViewData["controller"] = "Báo cáo sự cố";
    ViewData["action"] = "Xóa";
    ViewData["h2"] = "Xóa biên bản báo cáo sự cố";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-horizontal">
    <div class="form-group">
        <label asp-for="GhiChu" class="control-label col-md-3 col-sm-3 col-xs-12">
            <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <textarea asp-for="GhiChu" required="required" disabled class="form-control" name="message" data-parsley-trigger="keyup" data-parsley-minlength="20" data-parsley-maxlength="100" data-parsley-minlength-message="Come on! You need to enter at least a 20 caracters long comment.." data-parsley-validation-threshold="10"></textarea>
            <span asp-validation-for="GhiChu" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="HuongGiaiQuyet" class="control-label col-md-3 col-sm-3 col-xs-12"><span class="required">*</span></label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <textarea asp-for="HuongGiaiQuyet" required="required" disabled class="form-control" name="message" data-parsley-trigger="keyup" data-parsley-minlength="20" data-parsley-maxlength="100" data-parsley-minlength-message="Come on! You need to enter at least a 20 caracters long comment.." data-parsley-validation-threshold="10"></textarea>
            <span asp-validation-for="HuongGiaiQuyet" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="MaNV" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <select asp-for="MaNV" class="select2_group form-control" disabled asp-items="ViewBag.MaNV"></select>
            <span asp-validation-for="MaNV" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="NgayTao" class="control-label col-md-3 col-sm-3 col-xs-12">
            <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <input id="ngaytao" asp-for="NgayTao" disabled class="date-picker form-control col-md-7 col-xs-12 parsley-success" required="required" type="text" data-parsley-id="16">
            <span asp-validation-for="NgayTao" class="text-danger" />
        </div>
    </div>
    <div class="ln_solid"></div>
    <div class="form-group">
        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
            <form asp-action="Delete">
                <a asp-action="search" asp-controller="bienbansuco" class="btn btn-primary pull-left">Quay l?i</a>
                <input type="submit" value="Xóa" class="btn btn-success pull-right" />
            </form>
        </div>
   </div>
</div>

