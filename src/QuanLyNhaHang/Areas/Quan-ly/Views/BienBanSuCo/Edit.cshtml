@model QuanLyNhaHang.Models.BIENBANSUCO

@{
    Layout = "~/Areas/Quan-ly/Views/Shared/_LayoutContent.cshtml";
    ViewData["Title"] = "Chỉnh sửa biên bản sự cố";
    ViewData["areas"] = "Quản lý";
    ViewData["controller"] = "Biên bản sự cố";
    ViewData["action"] = "Chỉnh sửa";
    ViewData["h2"] = "Chỉnh sửa biên bản sự cố";
}
<form asp-action="Edit" id="demo-form2" data-parsley-validate="" class="" novalidate="">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="MaBienBan" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input asp-for="MaBienBan" class="form-control" />
                <span asp-validation-for="MaBienBan" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MaLoaiSuCo" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <select asp-for="MaLoaiSuCo" class="select2_group form-control" asp-items="ViewBag.MaNV"></select>
                <span asp-validation-for="MaLoaiSuCo" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MaNV" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <select asp-for="MaNV" class="select2_group form-control" asp-items="ViewBag.MaNV"></select>
                <span asp-validation-for="MaNV" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ThoiGian" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="input-group date datetimepicker1">
                    <input type="datetime" asp-for="ThoiGian" class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                    <span asp-validation-for="ThoiGian" class="text-danger" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="NguyenNhan" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <textarea asp-for="NguyenNhan" class="form-control" name="message" data-parsley-trigger="keyup" data-parsley-minlength="20" data-parsley-maxlength="100" data-parsley-minlength-message="Come on! You need to enter at least a 20 caracters long comment.." data-parsley-validation-threshold="10"></textarea>
                <span asp-validation-for="NguyenNhan" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="HuongGiaiQuyet" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <textarea asp-for="HuongGiaiQuyet" class="form-control"></textarea>
                <span asp-validation-for="HuongGiaiQuyet" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="GhiChu" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <textarea asp-for="GhiChu" class="form-control" data-parsley-trigger="keyup" data-parsley-minlength="20" data-parsley-maxlength="100" data-parsley-minlength-message="Come on! You need to enter at least a 20 caracters long comment.." data-parsley-validation-threshold="10"></textarea>
                <span asp-validation-for="GhiChu" class="text-danger" />
            </div>
        </div>
        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                <a asp-action="search" asp-controller="bienbansuco" class="btn btn-success pull-left">Quay lại</a>
                <input type="submit" value="Lưu" class="btn btn-warning pull-left" />
            </div>
        </div>
    </div>
</form>
            
