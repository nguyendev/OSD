@model QuanLyNhaHang.Models.LUOTKHACH

@{
    Layout = "~/Areas/Quan-ly/Views/Shared/_LayoutContent.cshtml";
    ViewData["Title"] = "Thêm lượt khách mới";
    ViewData["areas"] = "Quản lý";
    ViewData["controller"] = "Lượt khách";
    ViewData["action"] = "Tạo mới";
    ViewData["h2"] = "Thêm lượt khách mới";
}
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-horizontal">

        <div class="form-group">
            <label asp-for="MaLuot" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input asp-for="MaLuot" class="form-control" />
                <span asp-validation-for="MaLuot" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SoBan" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input asp-for="SoBan" class="form-control" />
                <span asp-validation-for="SoBan" class="text-danger" />
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="ThoiGianVao" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="input-group date datetimepicker1">
                    <input type="datetime" asp-for="ThoiGianVao" class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                <span asp-validation-for="ThoiGianVao" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ThoiGianRa" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="input-group date datetimepicker1">
                    <input type="datetime" asp-for="ThoiGianRa" class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                <span asp-validation-for="ThoiGianRa" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="GhiChu" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <textarea asp-for="GhiChu" class="form-control" data-parsley-trigger="keyup" data-parsley-minlength="20" data-parsley-maxlength="100" data-parsley-minlength-message="Come on! You need to enter at least a 20 caracters long comment.." data-parsley-validation-threshold="10"></textarea>
                <span asp-validation-for="GhiChu" class="text-danger" />
            </div>
        </div>
        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                <a asp-action="search" asp-controller="luotkhach" class="btn btn-success pull-left">Quay lại</a>
                <input type="submit" value="Thêm" class="btn btn-primary pull-left" />
            </div>
        </div>
    </div>
</form>
