@model QuanLyNhaHang.Models.PHANHOI

@{
    Layout = "~/Areas/Quan-ly/Views/Shared/_LayoutContent.cshtml";
    ViewData["Title"] = "Thêm phản hồi khách hàng | Quản lý";
    ViewData["areas"] = "Quản lý";
    ViewData["controller"] = "Phản hồi khách hàng";
    ViewData["action"] = "Tạo mới";
    ViewData["h2"] = "Thêm phản hồi khách hàng";
}
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="TenNguoiPH" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input asp-for="TenNguoiPH" class="form-control" />
                <span asp-validation-for="TenNguoiPH" class="text-danger" />
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="NoiDung" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <textarea asp-for="NoiDung" class="form-control" name="message" data-parsley-trigger="keyup" data-parsley-minlength="20" data-parsley-maxlength="100" data-parsley-minlength-message="Come on! You need to enter at least a 20 caracters long comment.." data-parsley-validation-threshold="10"></textarea>
                <span asp-validation-for="NoiDung" class="text-danger" />
            </div>
        </div>
        
        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                <a asp-action="search" asp-controller="bienbansuco" class="btn btn-success pull-left">Quay lại</a>
                <input type="submit" value="Thêm" class="btn btn-primary pull-left" />
            </div>
        </div>
    </div>
</form>
