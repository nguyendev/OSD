@model QuanLyNhaHang.Models.YEUCAUNHAPHANG

@{
    Layout = "~/Areas/Quan-ly/Views/Shared/_LayoutContent.cshtml";
    ViewData["Title"] = "Thêm yêu cầu nhập hàng";
    ViewData["areas"] = "Quản lý";
    ViewData["controller"] = "Yêu cầu nhập hàng";
    ViewData["action"] = "Tạo mới";
    ViewData["h2"] = "Thêm yêu cầu nhập hàng";
}
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-horizontal">

        <div class="form-group">
            <label asp-for="MaYeuCau" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input asp-for="MaYeuCau" class="form-control" />
                <span asp-validation-for="MaYeuCau" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MaNL" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <select asp-for="MaNL" class="select2_group form-control" asp-items="ViewBag.MaNL"></select>
                <span asp-validation-for="MaNL" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MaNCC" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <select asp-for="MaNCC" class="select2_group form-control" asp-items="ViewBag.MaNCC"></select>
                <span asp-validation-for="MaNCC" class="text-danger" />
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="SoLuong" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input asp-for="SoLuong" type="number" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="GhiChu" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <textarea asp-for="GhiChu" class="form-control" data-parsley-trigger="keyup" data-parsley-minlength="20" data-parsley-maxlength="100" data-parsley-minlength-message="Come on! You need to enter at least a 20 caracters long comment.." data-parsley-validation-threshold="10"></textarea>
                <span asp-validation-for="GhiChu" class="text-danger" />
            </div>
        </div>
        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                <a asp-action="search" asp-controller="yeucaunhaphang" class="btn btn-success pull-left">Quay lại</a>
                <input type="submit" value="Thêm" class="btn btn-primary pull-left" />
            </div>
        </div>
    </div>
</form>
