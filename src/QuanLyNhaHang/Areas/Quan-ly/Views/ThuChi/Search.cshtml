@model IEnumerable<QuanLyNhaHang.Models.THUCHI>

@{
    Layout = "~/Areas/Quan-ly/Views/Shared/_LayoutContent.cshtml";
    ViewData["Title"] = "Danh sách phiếu thu chi | Qu?n lý";
    ViewData["areas"] = "Quản lý";
    ViewData["controller"] = "Thu chi";
    ViewData["action"] = "Danh sách phiếu thu chi";
}

<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><strong>Tìm kiếm</strong></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="visibility:hidden" role="button" aria-expanded="false">
                            <i class="fa fa-wrench"></i>
                        </a>
                    </li>
                    <li><a class="close-link" style="visibility:hidden"><i class="fa fa-close"></i></a></li>
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <p class="text-muted font-13 m-b-30">
                </p>
                <form asp-action="Search" method="get" role="form" enctype="multipart/form-data">
                    <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Ngày l?p</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input id="date" name="ngaylap" class="date-picker form-control col-md-7 col-xs-12" type="text">
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Ng??i l?p</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownList("nguoilap", null, "t?t c?", new { @class = "select2_group form-control" })
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                        <button type="submit" class="btn btn-success">Tìm ki?m</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><strong>Danh sách phiếu chi</strong></h2>
                <ul class="nav navbar-right panel_toolbox">

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="visibility:hidden" role="button" aria-expanded="false">
                            <i class="fa fa-wrench"></i>
                        </a>
                    </li>
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap text-center" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.NguoiLap)</th>
                            <th>@Html.DisplayNameFor(model => model.NgayTao)</th>
                            <th>@Html.DisplayNameFor(model => model.LaPhieuThu)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.NguoiLap)</td>
                                <td>@Html.DisplayFor(modelItem => item.NgayTao)</td>
                                <td>@Html.DisplayFor(modelItem => item.LaPhieuThu)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
