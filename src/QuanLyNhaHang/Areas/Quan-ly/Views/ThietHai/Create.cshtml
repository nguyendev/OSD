@model QuanLyNhaHang.Models.THIETHAI

@{
    Layout = "~/Areas/Quan-ly/Views/Shared/_LayoutContent.cshtml";
    ViewData["Title"] = "Thêm thông tin thiệt hại | Quản lý";
    ViewData["areas"] = "Quản lý";
    ViewData["controller"] = "Thông tin thiệt hại";
    ViewData["action"] = "Tạo mới";
    ViewData["h2"] = "Thêm thông tin thiệt hại";
}

<form asp-action="Create">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="Ten" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input asp-for="Ten" class="form-control" />
                <span asp-validation-for="Ten" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MaBienBan" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <select asp-for="MaBienBan" class="select2_group form-control" asp-items="ViewBag.MaBienBan"></select>
                <span asp-validation-for="MaBienBan" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SoLuong" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input asp-for="SoLuong" class="form-control" type="number"/>
                <span asp-validation-for="SoLuong" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DVT" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input asp-for="DVT" class="form-control" />
                <span asp-validation-for="DVT" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DonGia" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input asp-for="DonGia" class="form-control" type="number" />
                <span asp-validation-for="DonGia" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="GhiChu" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <textarea asp-for="GhiChu" class="form-control" data-parsley-trigger="keyup" data-parsley-minlength="20" data-parsley-maxlength="100" data-parsley-minlength-message="Come on! You need to enter at least a 20 caracters long comment.." data-parsley-validation-threshold="10"></textarea>
                <span asp-validation-for="GhiChu" class="text-danger" />
            </div>
        </div>
        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                <a asp-action="search" asp-controller="thiethai" class="btn btn-success pull-left">Quay lại</a>
                <input type="submit" value="Thêm" class="btn btn-primary pull-left" />
            </div>
        </div>
    </div>
</form>
