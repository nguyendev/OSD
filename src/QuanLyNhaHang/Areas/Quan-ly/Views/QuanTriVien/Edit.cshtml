@model QuanLyNhaHang.Models.AppUser

@{
    Layout = "~/Areas/Quan-ly/Views/Shared/_LayoutContent.cshtml";
    ViewData["Title"] = "Sửa người dùng";
    ViewData["areas"] = "Quản trị viên";
    ViewData["controller"] = "Quản lý người dùng";
    ViewData["action"] = "Sửa người dùng";
    ViewData["h2"] = "Sửa người dùng";
}

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-default">Hủy</a>
</form>