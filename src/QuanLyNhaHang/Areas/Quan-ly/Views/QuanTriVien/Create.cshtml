@model QuanLyNhaHang.Areas.Admin.ViewModels.CreateModel
@{
    Layout = "~/Areas/Quan-ly/Views/Shared/_LayoutContent.cshtml";
    ViewData["Title"] = "Tạo người dùng mới";
    ViewData["areas"] = "Quản trị viên";
    ViewData["controller"] = "Quản lý người dùng";
    ViewData["action"] = "Tạo người dùng";
    ViewData["h2"] = "Tạo người dùng mới";
}

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="Name" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger" />
            </div>
        </div>
        
        <input type="file" name="file" multiple />
        
        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                <a asp-action="index" class="btn btn-primary pull-left">Quay lại</a>
                <input type="submit" value="Tạo" class="btn btn-success pull-right" />
            </div>
        </div>
    </div>
</form>
