@model IEnumerable<QuanLyNhaHang.Models.AppUser>

@{
    Layout = "~/Areas/Quan-ly/Views/Shared/_LayoutContent.cshtml";
    ViewData["Title"] = "Danh sách người dùng";
    ViewData["areas"] = "Quản trị viên";
    ViewData["controller"] = "Quản lý người dùng";
    ViewData["action"] = "Danh sách người dùng";
    ViewData["h2"] = "Danh sách người dùng"; 
}
<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3" class="text-center">Không có người dùng</td></tr>
    }
    else
    {
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
                    <tbody>
                        @foreach (QuanLyNhaHang.Models.AppUser user in Model)
                        {
                            <tr>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td class="text-center">
                                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                                        <a class="btn btn-sm btn-success" asp-action="Edit"
                                           asp-route-id="@user.Id">Edit</a>
                                        <button type="submit"
                                                class="btn btn-sm btn-danger">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
    }
</table>                

