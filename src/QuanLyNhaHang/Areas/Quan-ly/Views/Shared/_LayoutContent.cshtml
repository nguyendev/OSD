        break;
    case "Search":
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="">
                <ol class="breadcrumb">
                    <li><span class="fa fa-home"></span></li>
                    <li><span>@ViewData["areas"]</span></li>
                    <li><span>@ViewData["controller"]</span></li>
                    <li class="active">@ViewData["action"]</li>
                </ol>
            </div>
            @RenderBody();
        </div>
        @section css{
            <link href="~/css/site.css" rel="stylesheet" />
            <!-- Datatables -->
