@{
    Layout = "~/Areas/Quan-ly/Views/Shared/_Layout.cshtml";
    ViewData["select"] = "index";
}
@switch (ViewContext.RouteData.Values["action"].ToString())
{
    case "Index":
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="">
                <ol class="breadcrumb">
                    <li><span class="fa fa-home"></span></li>
                    <li><span>@ViewData["areas"]</span></li>
                    <li><span>@ViewData["controller"]</span></li>
                    <li class="active">@ViewData["action"]</li>
