@model IEnumerable<Microsoft.AspNetCore.Identity.EntityFrameworkCore.IdentityRole>
@{
    Layout = "~/Areas/Quan-ly/Views/Shared/_LayoutContent.cshtml";
    ViewData["Title"] = "Danh sách quyền | Quản trị viên";
    ViewData["areas"] = "Quản trị viên";
    ViewData["controller"] = "Phân quyền";
    ViewData["action"] = "Danh sách quyền";
    ViewData["h2"] = "Danh sách quyền";
}
<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap text-center" cellspacing="0" width="100%">
    
    <tr><th>Name</th><th>Users</th><th></th></tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="4" class="text-center">No Roles</td></tr>
    }
    else
    {
        foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td identity-role="@role.Id"></td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit"
                           asp-route-id="@role.Id">Sửa</a>
                        <button type="submit"
                                class="btn btn-sm btn-danger">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>
