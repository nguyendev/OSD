@model IEnumerable<QuanLyNhaHangv1.Models.BlogPermission>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PermissionName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PermissionName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PermissionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PermissionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PermissionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
